@model EventNest.Models.Event
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<h2>Edit Event</h2>
 
<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input name="Title" value="@Model.Title" class="form-control mb-2" required />
    <input name="Category" value="@Model.Category" class="form-control mb-2" required />
    <input name="City" value="@Model.City" class="form-control mb-2" required />
    <input name="Venue" value="@Model.Venue" class="form-control mb-2" required />
    <input type="date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" class="form-control mb-2" required />
    <input name="Price" value="@Model.Price" class="form-control mb-2" type="number" required />
    <input name="PosterUrl" value="@Model.PosterUrl" class="form-control mb-2" />
    <textarea name="Description" class="form-control mb-2">@Model.Description</textarea>
    <button type="submit" class="btn btn-primary">Update</button>
</form>