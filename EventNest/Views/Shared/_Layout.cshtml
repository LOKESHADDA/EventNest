@{
    var user = Context.Session.GetString("user");
}
 
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>EventNest</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="/">🎫 EventNest</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Event/Browse">Events</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/About">About</a></li>
 
                @if (user == "admin")
                {
                    <li class="nav-item"><a class="nav-link" href="/Event/Manage">Manage Events</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard">Dashboard</a></li>
                }
            </ul>
 
            <ul class="navbar-nav ms-auto">
                @if (!string.IsNullOrEmpty(user))
                {
                    <li class="nav-item text-light nav-link">Hi, @user</li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout</a></li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" href="/Account/SignIn">Sign In</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/SignUp">Sign Up</a></li>
                }
            </ul>
        </div>
    </nav>
 
    <div class="container mt-4">
        @RenderBody()
    </div>
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>